<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Mi Aplicación</display-name>
    <!-- Configuración de bienvenida -->
    <servlet>
        <servlet-name>CerrarSesionServlet</servlet-name>
        <servlet-class>controllers.CerrarSesionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>controllers.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrestamoServlet</servlet-name>
        <servlet-class>controllers.PrestamoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PagoServlet</servlet-name>
        <servlet-class>controllers.PagoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcelServlet</servlet-name>
        <servlet-class>controllers.ExcelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CerrarSesionServlet</servlet-name>
        <url-pattern>/CerrarSesionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/UsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrestamoServlet</servlet-name>
        <url-pattern>/PrestamoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagoServlet</servlet-name>
        <url-pattern>/PagoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcelServlet</servlet-name>
        <url-pattern>/ExcelServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>views/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
